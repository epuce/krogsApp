<div class="admin foods">
  <p id="notice"><%= notice %></p>

  <h1>Ēdienu saraksts</h1>

  <table>
    <thead class="table-head">
    <tr>
      <td>Nosaukums</td>
      <td>Raksturojums</td>
      <td>Cena</td>
      <td>Secība</td>
      <td>Grupa</td>
      <td>Parādīts?</td>
    </tr>
    </thead>

    <tbody class="table-body">
      <% @foods.each do |food| %>
        <tr>
          <td class="name">
            <%= food.name %>
          </td>
          <td class="order">
            <%= food.description %>
          </td>
          <td class="price">
            <%= food.price %>
          </td>
          <td class="order">
            <%= food.order %>
          </td>

          <td class="group">
			  <%= food.group_id ? Group.find(food.group_id).name : Subgroup.find(food.subgroup_id).name  %>
          </td>

          <td class="is-active">
            <%= food.isActive ? "Jā" : "Nē"%>
          </td>
        </tr>
        <tr>
          <td colspan="6">
            <span class="show"><%= link_to 'Parādīt', food %></span>
            <span class="edit"><%= link_to 'Labot', edit_food_path(food) %></span>
            <span class="delete"><%= link_to 'Dzēst', food, method: :delete, data: { confirm: 'Esi pārliecināts?' } %></span>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'Pievienot jaunu ēdienu', new_food_path, class: 'submit-btn'%>
</div>
