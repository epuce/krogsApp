<!DOCTYPE html>
<html>
<head>
  <title>Šlāgeris</title>
  <%= stylesheet_link_tag    'application', media: 'all'%>
  <%= javascript_include_tag 'application'%>
  <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
  <%= csrf_meta_tags %>
</head>
<body>
    <header class="header">
        <div class="container">
	        <div class="logo">
								<%= link_to image_tag("logo.gif", alt: 'Krodziņš "Šlāgeris"'), root_path%>
	        </div>
	        <nav class="nav">
	            <ul>
	                <li class="js-open-drop-down">
										<a class="nav-item">Ēdienkarte</a>

										<ul class="group">
											<% @groups.each do |group| %>
													<li class="nav-item js-nav-item js-page" rel="page-<%=group.id%>"><%= group.text %></li>
											<% end %>
										</ul>

										<% if User.find_by(id: session[:user_id]) %>
												<%= link_to 'administrēt', foods_path, class:'nav-admin-item' %>
										<% end %>
									</li>
	                <li>
										<%= link_to raw('Krodziņš 360&deg;'), root_path, class:'nav-item js-nav-item', rel: 'nav-2' %>
	                </li>
	                <li>
										<%= link_to 'Galerija', root_path, class:'nav-item js-nav-item', rel: 'nav-3' %>

										<% if User.find_by(id: session[:user_id]) %>
												<%= link_to 'administrēt', pictures_path, class:'nav-admin-item' %>
										<% end %>
	                </li>
	                <li>
										<%= link_to 'Kontakti', root_path, class:'nav-item js-nav-item', rel: 'nav-4' %>
	                </li>
	            </ul>
	        </nav>
	    </div>
	</header>
    <div class="main-container">
			<% if User.find_by(id: session[:user_id]) %>
					<%= button_to 'Logout', logout_path, :method => :delete %>
			<% end %>

        <%= yield %>
    </div>
</body>
</html>
