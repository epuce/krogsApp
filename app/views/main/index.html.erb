<div id="home" class="main-text-wrapper">
  <% @maintexts.each do |maintext| %>
      <% if maintext.isActive %>
          <div class="main-text">
            <%= maintext.text %>
          </div>
      <% end %>
  <% end %>
</div>
<h1 id="menu" class="menu-header">Ä’dienkarte</h1>
<div class="menu-text-wrapper">
  <div class="page">
  <% @groups.each do |group| %>
        <% if group.isActive %>
            <div class="group-title">
              <%= group.text %>
            </div>
            <% @foods.where(group_id: group.id).find_each do |food| %>
                <div class="food">
                  <div class="name">
                    <%= food.name %>
                  </div>
                  <div class="price">
                    <%= food.price %>
                  </div>
                  <div class="description">
                    <%= food.description %>
                  </div>
                </div>
            <% end %>
        <% end %>
  <% end %>
  </div>
</div>


