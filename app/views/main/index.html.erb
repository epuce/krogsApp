<div class="main-text wrapper">
  <% @maintexts.order(:order).each do |maintext| %>
      <% if maintext.isActive %>
          <div class="text">
            <%= maintext.text %>
          </div>
      <% end %>
  <% end %>
</div>

<h1 class="section-header">Ēdienkarte</h1>

<div class="menu wrapper">
  <% @groups.each do |group| %>
      <div class="page">
        <% if group.isActive %>
            <div class="group-title">
              <%= group.text %>
            </div>
            <% @foods.where(group_id: group.id).find_each do |food| %>
                <div class="food">
                  <div class="name">
                    <%= food.name %>
                  </div>
                  <div class="price">
                    <%= food.price %>
                  </div>
                  <div class="description">
                    <%= food.description %>
                  </div>
                </div>
            <% end %>
        <% end %>
      </div>
  <% end %>
</div>

<h1 class="section-header">Krodziņš 360&deg;</h1>

<%= render template: 'view/index' %>

<h1 class="section-header">Galerija</h1>

<div class="gallery wrapper">
  <% @pictures.each do |picture| %>
      <%= link_to image_tag(picture.name, alt: picture.name_file_name),  "assets/gallery/#{picture.name_file_name}", class: 'picture'%>
  <% end %>
  <div class="show-more">Parādīt vēl</div>
  <div class="hide-more">Paslēpt</div>
</div>

<h1 class="section-header">Kontakti</h1>

<%= render template: 'contacts/index' %>



