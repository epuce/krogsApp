<div class="admin maintexts">
  <p id="notice"><%= notice %></p>

  <h1 class="admin-header">Ievadtekstu saraksts</h1>

  <table>
    <thead class="table-head">
      <tr>
        <td class="text-header">Teksts</td>
        <td class="order-header">Secība</td>
        <td class="is-active-header">Izmanto?</td>
        <td colspan="3"></td>
      </tr>
    </thead>

    <tbody class="table-body">
      <% @maintexts.order(:order).each do |maintext| %>
        <tr>
          <td class="text"><%= maintext.text %></td>
          <td class="order"><%= maintext.order %></td>
          <td class="is-active">
            <% if maintext.isActive %>
                Jā
            <% else %>
                Nē
            <% end %>
          </td>
          <td class="show"><%= link_to 'Parādīt', maintext %></td>
          <td class="edit"><%= link_to 'Labot', edit_maintext_path(maintext) %></td>
          <td class="delete"><%= link_to 'Dzēst', maintext, method: :delete, data: { confirm: 'Esi pārliecināts?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'Pievienot jaunu ievadtekstu', new_maintext_path(), class: 'add' %>
</div>