<div class="admin users">
  <p id="notice"><%= notice %></p>

  <h1>Listing Users</h1>

  <table>
    <thead>
    <tr>
      <th>Name</th>
      <th>Password digest</th>
      <th>Isactive</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @users.each do |user| %>
        <tr>
          <td><%= user.name %></td>
          <td><%= user.password_digest %></td>
          <td class="is-active">
            <% if user.isActive %>
                Jā
            <% else %>
                Nē
            <% end %>
          </td>
          <td><%= link_to 'Parādīt', user %></td>
          <td><%= link_to 'Labot', edit_user_path(user) %></td>
          <td><%= link_to 'Dzēst', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
    <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'Pievienot jaunu lietotāju', new_user_path %>
</div>

